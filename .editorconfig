root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
trim_trailing_whitespace = true

[*.{htm,html,css,scss,sass,js,jsx}]
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.rb]
indent_size = 2

[*.php]
indent_size = 4

[*.py]
indent_size = 4
